<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="How to Play Geek Out"
        android:textColor="#008000"
        android:textSize="40dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/text_view_id1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Preliminary Instructions"
        android:textColor="#008000"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/text_view_id2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/outgeek"
        android:textColor="#000000"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/text_view_id3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="The Game"
        android:textColor="#008000"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/text_view_id4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/outgeek1"
        android:textColor="#000000"
        android:textSize="20dp" />


</LinearLayout>

